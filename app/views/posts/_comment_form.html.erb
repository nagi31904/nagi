<div class="form-group">

  <%= f.label :description, "Description" %>

  <div data-no-turbolink>
    <%= f.cktext_area :description, :class => 'someclass', :ckeditor => {:language => 'zh-tw'} %>
  </div>
</div>



<% if @comment.errors.any? %>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>