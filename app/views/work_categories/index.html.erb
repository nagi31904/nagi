<div class="bg80 center">

  <h2>WORK-CATEGORY</h2>


  <HR size="30">
  <% @work_categories.each do |work_category| %>

      <div class="col-md-6">
        <%= work_category.title %>
      </div>
      <div class="col-md-6">

            <%= link_to 'edit', edit_work_category_path(work_category), :class => "btn btn-default" %>

            <%= link_to 'Delete', work_category_path(work_category, :page => params[:page]), :method => :delete, :class => "btn btn-danger" %>

      </div>

  <% end %>


  <div>
    <%= form_for @work_category, :url => work_categories_path(@work_category) do |f| %>
        <%= render :partial => 'form', :locals => {:f => f} %>
        <%= f.submit "Create", :class => "btn btn-primary" %>
    <% end %>
  </div>

</div>