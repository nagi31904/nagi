<div class="bg80 center">
  <head>
    <script src="/ckeditor/ckeditor.js"></script>
  </head>
  <h2>NEW_WORK_POST</h2>
    <% if @work_category !=nil %>
        <%= form_for @work_post, :url => work_posts_path(:work_category_id => @work_category.id), :method => :post do |f| %>

            <%= render :partial => 'form', :locals => {:f => f} %>
            <%= f.submit "Create", :class => "btn btn-primary" %>
            <%= link_to "bK TO INDEX", work_posts_path(:work_category_id => @work_category.id), :class => "btn btn-default" %>

        <% end %>
    <% else %>
        <%= form_for @work_post, :url => work_posts_path, :method => :post do |f| %>

            <%= render :partial => 'form', :locals => {:f => f} %>
            <%= f.submit "Create", :class => "btn btn-primary" %>
            <%= link_to "bK TO INDEX", work_posts_path, :class => "btn btn-default" %>

        <% end %>

    <% end %>

</div>