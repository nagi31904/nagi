<div class="form-group">
  <div class="cco">
    <%= f.label :title, "TITLE" %>
  </div>
  <%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">

    <%= f.label :description, "Description" %>

  <div data-no-turbolink>
    <%= f.cktext_area :description, :class => 'someclass', :ckeditor => {:language => 'zh-tw'} %>
  </div>
</div>
<div class="form-group">

    <%= f.file_field :img %>

</div>

<% if @info.errors.any? %>
    <ul>
      <% @info.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>