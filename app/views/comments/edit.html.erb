<div class="bg80 center">
  <head>
    <script src="/ckeditor/ckeditor.js"></script>
  </head>
  <h1>edit</h1>

  <%= form_for @comment, :url => post_comment_path(@post,@comment), :method => :patch do |f| %>
      <%= render :partial => 'form', :locals => { :f => f } %>
      <%= f.submit "Update"  ,:class => "btn btn-default"%>
      <%= link_to "back to show", post_path(params[:post_id])  ,:class => "btn btn-default"%>
  <% end %>
</div>