<div class="ti">
  <h1><%= link_to "NAGI-CHIANG", abouts_path %></h1>
  <h2>Welcome to my world.</h2>
</div>

<div class="bgsen">
  <div class="bgblock1">
    <h2 class="center mini-title">New-Work of web</h2>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <div class="carousel slide" id="myCarousel">
            <div class="carousel-inner">
              <% if @number < 3 %>
                  <div class="item active">
                    <ul class="thumbnails list-inline tese">
                      <% @work_post_first_webs_0.each do |post| %>
                          <li class="span3 line">
                            <div class="thumbnail img_size">
                              <% tit = image_tag(post.img.url(:medium)) %>
                              <%= link_to tit, work_post_path(post, :work_category_id => @work_category_id) %>
                            </div>
                            <div class="caption">
                              <h4><%= post.title %></h4>

                              <%= link_to "Read More", work_post_path(post, :work_category_id => @work_category_id) %>
                            </div>
                          </li>

                      <% end %>
                    </ul>
                  </div><!-- /Slide1 -->
              <% else %>
                  <div class="item active">
                    <ul class="thumbnails list-inline tese">
                      <% a = 0 %>
                      <% b = 2 %>
                      <% work_post_webs = @work_post_webs %>
                      <% work_post_webs[a..b].each do |post| %>
                          <li class="span3 line">
                            <div class="thumbnail img_size">
                              <% tit = image_tag(post.img.url(:medium)) %>
                              <%= link_to tit, work_post_path(post, :work_category_id => @work_category_id) %>
                            </div>
                            <div class="caption">
                              <h4><%= post.title %></h4>

                              <%= link_to "Read More", work_post_path(post, :work_category_id => @work_category_id) %>
                            </div>
                          </li>

                      <% end %>
                    </ul>
                  </div><!-- /Slide1 -->
                  <% numder_count = 1 %>
                  <% count=0 %>
                  <% while count < @number_v %>
                      <% a += 3 %>
                      <% b += 3 %>
                      <div class="item">
                        <ul class="thumbnails list-inline tese">

                          <% work_post_webs[a..b].each do |post| %>
                              <li class="span3 line">
                                <div class="thumbnail img_size">
                                  <% tit = image_tag(post.img.url(:medium)) %>
                                  <%= link_to tit, work_post_path(post, :work_category_id => @work_category_id) %>
                                </div>
                                <div class="caption">
                                  <h4><%= post.title %></h4>

                                  <%= link_to "Read More", work_post_path(post, :work_category_id => @work_category_id) %>
                                </div>
                              </li>

                          <% end %>
                        </ul>
                      </div><!-- /Slide2 -->
                      <% numder_count += 1 %>
                      <% count +=1 %>
                  <% end %>
              <% end %>
            </div>


          </div><!-- /#myCarousel -->

        </div><!-- /.span12 -->
      </div><!-- /.row -->
    </div><!-- /.container -->


  </div>
</div>


